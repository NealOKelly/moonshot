<!-- Modal for folder creation progress -->
<div class="modal fade" id="create-folder-status" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="session-expired" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="create-folder-label">Create Folder Status</h5>
				<span class="mt-2 mt-md-0">
				</span>
			</div>
			<div class="modal-body">
				<p id="create-folder-caption">Creating folder...</p>
				<div class="progress">
					<div id="create-folder-progress-bar" class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="modal-footer">
				<button id="create-folder-ok-button" type="button" class="btn btn-green" style="display:none">OK</button>
			</div>
		</div>
	</div>
</div>